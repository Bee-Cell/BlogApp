<% include ./partials/header %>

	<div class="ui container" style="margin-top:55px;">
		<div class="ui grid">
			<div class="row">
				<div class="ten wide column" style="border: 2px solid #b9b1b1; margin: 20px auto; padding: 20px;">
					<% blogs.forEach(function(blog){ %>
					  	<h2> <%= blog.title %> </h2>
					  	<h4> <span> <%= blog.created.toDateString() %> </span> </h4>
						<img src="<%= blog.image %>" style="width: 100%;">
						
						
					<p> <%- blog.body.substring(0, 100) %>.... </p>
						<a href="/blogs/<%= blog._id %>"  class="ui violet basic button"> Read More</a>
						<hr>
					<% }) %>
				</div>
			</div>
		</div>
 	</div>


<% include ./partials/footer %>
