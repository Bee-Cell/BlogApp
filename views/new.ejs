<% include ./partials/header %>
	<div class="ui container" style="margin-top:55px;">
		<div class="ui grid">
			<div class="row">
				<div class="ten wide column" style="margin: 20px auto; border: 2px solid #b9b1b1; padding: 20px; ">
					<h3 style="text-align: center;">Add New Blog</h3>
					<form class="ui form" action="/blogs" method="POST">
						<div class="field">
						    <label>Title</label>
						    <input type="text" name="title" placeholder="Enter Your Title">
						</div>
						<div class="field">
						    <label>Image</label>
						    <input type="text" name="image" placeholder="Enter Image URL">
						</div>
						<div class="field">
						  	<label>Blog Content</label>
						    <textarea name="body" cols="5" rows="5" placeholder="Enter the text here"> </textarea>
						</div>
						  <input class="ui button" value="Submit" type="submit">
					</form>
				</div>
			</div>
		</div>
	</div>

