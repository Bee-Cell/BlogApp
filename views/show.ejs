<% include ./partials/header %>
	<div class="ui container" style="margin-top:55px;">
		<div class="ui grid">
			<div class="row">
				<div class="twelve wide column" style="border: 2px solid #b9b1b1; margin: 20px auto; padding: 20px;">
					<h2> <%= blog.title %> </h2>
					<h4> <span> <%= blog.created.toDateString() %> </span> </h4>
					<img src="<%= blog.image %>" style="width: 100%;">
					<p> <%- blog.body %>  </p>
					<a href="/blogs/<%= blog._id %>/edit"  class="ui purple basic button"> Update </a>
					<form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
						<button class="ui red basic button" type="submit"> Delete </button>
					</form>

				</div>
			</div>
		</div>
	</div>

<% include ./partials/footer %>